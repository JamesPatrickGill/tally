---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Tally - Simple Net Worth Tracking',
  description = 'An aggressively straightforward way to monitor your finances. Track your net worth locally, privately, and simply.'
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL('/tally/og-image.png', Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="net worth tracker, personal finance, local-first, privacy, mac app, open source" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/tally/favicon.png" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "SoftwareApplication",
          "name": "Tally",
          "description": description,
          "url": canonicalUrl.href,
          "applicationCategory": "FinanceApplication",
          "operatingSystem": "macOS",
          "offers": {
            "@type": "Offer",
            "price": "0",
            "priceCurrency": "USD"
          },
          "author": {
            "@type": "Person",
            "name": "James Gill",
            "url": "https://github.com/jamespatrickgill"
          },
          "license": "https://opensource.org/licenses/MIT",
          "image": ogImage.href
        },
        {
          "@type": "WebSite",
          "name": "Tally",
          "url": Astro.site?.href,
          "description": description
        }
      ]
    })} />
    <link rel="apple-touch-icon" href="/tally/favicon.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet" />
  </head>
  <body>
    <slot />

    <!-- GoatCounter Analytics -->
    <script data-goatcounter="https://tally.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
  </body>
</html>

<style is:global>
  @import '../styles/tokens.css';
</style>
