---
const GITHUB_RELEASES = 'https://github.com/jamespatrickgill/tally/releases/latest';
const GITHUB_REPO = 'https://github.com/jamespatrickgill/tally';
---

<section id="download" class="download">
  <div class="download-content">
    <div class="download-main">
      <h2>Ready to start?</h2>
      <p>Free and open source. Keep it forever.</p>
      <a href={GITHUB_RELEASES} class="download-btn">
        <svg class="apple-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        <div class="download-text">
          <span class="download-label">Download for macOS</span>
          <span class="download-note">Apple Silicon & Intel</span>
        </div>
      </a>
    </div>
    <div class="download-meta">
      <a href={GITHUB_REPO} class="meta-link" target="_blank" rel="noopener noreferrer">
        <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
        </svg>
        View source
      </a>
      <span class="meta-divider">|</span>
      <span class="meta-license">MIT License</span>
    </div>
  </div>
</section>

<style>
  .download {
    padding: 100px 24px;
    background: var(--bg-secondary);
    border-top: 1px solid var(--line-subtle);
  }

  .download-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .download-main h2 {
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: -0.03em;
    margin-bottom: 8px;
  }

  .download-main p {
    color: var(--text-secondary);
    font-size: 1.1rem;
    margin-bottom: 40px;
  }

  .download-btn {
    display: inline-flex;
    align-items: center;
    gap: 16px;
    background: var(--accent-green);
    padding: 18px 36px;
    border-radius: 10px;
    transition: all 0.15s;
  }

  .download-btn:hover {
    background: var(--accent-green-light);
    transform: translateY(-2px);
  }

  .apple-icon {
    width: 28px;
    height: 28px;
    color: white;
  }

  .download-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2px;
  }

  .download-label {
    font-size: 1rem;
    font-weight: 600;
    color: white;
  }

  .download-note {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .download-meta {
    margin-top: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    color: var(--text-tertiary);
    font-size: 0.9rem;
  }

  .meta-link {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--text-secondary);
    transition: color 0.15s;
  }

  .meta-link:hover {
    color: var(--text-primary);
  }

  .meta-link svg {
    width: 16px;
    height: 16px;
  }

  .meta-divider {
    opacity: 0.3;
  }

  @media (max-width: 640px) {
    .download {
      padding: 80px 24px;
    }

    .download-main h2 {
      font-size: 2rem;
    }
  }
</style>
