<style>
  .features {
    padding: 40px 0;
  }

  .feature-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 80px 48px;
    border-bottom: 1px solid var(--line-subtle);
  }

  .feature-row:last-child {
    border-bottom: none;
  }

  .feature-row.reverse {
    direction: rtl;
  }

  .feature-row.reverse > * {
    direction: ltr;
  }

  .feature-text h2 {
    font-size: 1.75rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: 16px;
  }

  .feature-text p {
    font-size: 1.05rem;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .feature-visual {
    background: var(--bg-secondary);
    border: 1px solid var(--line);
    border-radius: 12px;
    padding: 32px;
  }

  /* Local-first visual */
  .visual-local {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .file-icon {
    width: 56px;
    height: 56px;
    background: var(--bg-tertiary);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .file-icon svg {
    width: 28px;
    height: 28px;
    color: var(--accent-green);
  }

  .file-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .file-name {
    font-family: var(--font-mono);
    font-size: 1.1rem;
    font-weight: 600;
  }

  .file-path {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-tertiary);
  }

  /* Time visual */
  .visual-time {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .time-block {
    display: flex;
    align-items: baseline;
    gap: 8px;
  }

  .time-value {
    font-family: var(--font-mono);
    font-size: 3rem;
    font-weight: 700;
    color: var(--accent-green-light);
    letter-spacing: -0.03em;
  }

  .time-unit {
    font-size: 1rem;
    color: var(--text-tertiary);
  }

  .time-comparison {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .comparison-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.95rem;
  }

  .comparison-item.crossed {
    color: var(--text-tertiary);
    text-decoration: line-through;
  }

  .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }

  .dot.green { background: var(--accent-green); }
  .dot.red { background: var(--accent-red); opacity: 0.5; }

  /* Accounts visual */
  .account-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .account {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: var(--bg-tertiary);
    border-radius: 8px;
  }

  .account-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .account-name {
    flex: 1;
    font-size: 0.95rem;
  }

  .account-value {
    font-family: var(--font-mono);
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--accent-blue);
  }

  .account.liability .account-value {
    color: var(--accent-orange);
  }

  /* Code visual */
  .visual-code {
    display: flex;
    flex-direction: column;
    gap: 0;
    padding: 0;
    overflow: hidden;
  }

  .code-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 20px;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--line-subtle);
  }

  .code-file {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .code-header .code-comment {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-tertiary);
  }

  .code-block {
    padding: 20px;
    margin: 0;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    line-height: 1.7;
    background: var(--bg-secondary);
    overflow-x: auto;
  }

  .code-block code {
    color: var(--text-secondary);
  }

  .code-keyword {
    color: var(--accent-purple);
  }

  .code-string {
    color: var(--accent-green-light);
  }

  .code-comment {
    color: var(--text-tertiary);
    font-style: italic;
  }

  .code-fn {
    color: var(--accent-blue);
  }

  .code-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 14px 20px;
    background: var(--bg-tertiary);
    border-top: 1px solid var(--line-subtle);
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-secondary);
    transition: all 0.15s;
  }

  .code-link:hover {
    background: var(--bg-elevated);
    color: var(--text-primary);
  }

  .code-link svg {
    opacity: 0.7;
  }

  @media (max-width: 900px) {
    .feature-row {
      grid-template-columns: 1fr;
      gap: 40px;
      padding: 60px 24px;
    }

    .feature-row.reverse {
      direction: ltr;
    }

    .feature-text {
      text-align: center;
    }

    .feature-text h2 {
      font-size: 1.5rem;
    }
  }
</style>
