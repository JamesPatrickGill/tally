---
const GITHUB_RELEASES = 'https://github.com/jamespatrickgill/tally/releases/latest';
---

<section class="hero">
  <div class="hero-chart">
    <svg class="chart-svg" viewBox="0 0 1200 400" preserveAspectRatio="none" aria-hidden="true">
      <defs>
        <linearGradient id="heroGreenFill" x1="0%" y1="100%" x2="0%" y2="0%">
          <stop offset="0%" style="stop-color:#22c55e;stop-opacity:0"/>
          <stop offset="100%" style="stop-color:#22c55e;stop-opacity:0.15"/>
        </linearGradient>
        <linearGradient id="heroBlueFill" x1="0%" y1="100%" x2="0%" y2="0%">
          <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:0"/>
          <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:0.08"/>
        </linearGradient>
      </defs>

      <!-- Grid lines -->
      <g class="grid-lines" opacity="0.04" stroke="#fff" stroke-width="1">
        <line x1="0" y1="100" x2="1200" y2="100"/>
        <line x1="0" y1="200" x2="1200" y2="200"/>
        <line x1="0" y1="300" x2="1200" y2="300"/>
      </g>

      <!-- Blue area (assets) -->
      <path class="chart-area chart-area-blue" d="M0 400 L0 280 Q200 240 400 200 Q600 160 800 140 Q1000 110 1200 90 L1200 400 Z" fill="url(#heroBlueFill)"/>

      <!-- Green area (net worth) -->
      <path class="chart-area chart-area-green" d="M0 400 L0 320 Q200 280 400 240 Q600 200 800 175 Q1000 140 1200 120 L1200 400 Z" fill="url(#heroGreenFill)"/>

      <!-- Blue line (assets) -->
      <path class="chart-line chart-line-blue" d="M0 280 Q200 240 400 200 Q600 160 800 140 Q1000 110 1200 90" stroke="#3b82f6" stroke-width="2" stroke-linecap="round" fill="none"/>

      <!-- Green line (net worth) -->
      <path class="chart-line chart-line-green" d="M0 320 Q200 280 400 240 Q600 200 800 175 Q1000 140 1200 120" stroke="#22c55e" stroke-width="3" stroke-linecap="round" fill="none"/>

      <!-- Orange line (liabilities) -->
      <path class="chart-line chart-line-orange" d="M0 360 Q200 365 400 370 Q600 372 800 370 Q1000 365 1200 355" stroke="#f97316" stroke-width="2" stroke-linecap="round" fill="none"/>
    </svg>
  </div>

  <div class="hero-content">
    <div class="hero-main">
      <div class="hero-badge">Local-only • Open source</div>
      <h1 class="hero-title">
        Agressively straight-forward<br/>open source financial tracking.
      </h1>
      <p class="hero-subtitle">
        Secure and private tracking focused on a radically simple user experience.
      </p>
      <div class="hero-actions">
        <a href={GITHUB_RELEASES} class="btn-download">
          <span class="btn-text">Download</span>
          <span class="btn-platform">macOS</span>
        </a>
      </div>
    </div>

    <div class="hero-stats">
      <div class="stat">
        <span class="stat-label">Net Worth</span>
        <span class="stat-value positive">£350,452</span>
      </div>
      <div class="stat">
        <span class="stat-label">Assets</span>
        <span class="stat-value blue">£559,652</span>
      </div>
      <div class="stat">
        <span class="stat-label">Liabilities</span>
        <span class="stat-value orange">-£209,200</span>
      </div>
    </div>
  </div>

  <div class="hero-image">
    <img
      src="/tally/screenshot.webp"
      alt="Tally app"
      loading="eager"
      width="2200"
      height="1423"
    />
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .hero-chart {
    position: absolute;
    inset: 0;
    z-index: 0;
    pointer-events: none;
  }

  .chart-svg {
    width: 100%;
    height: 100%;
  }

  .chart-line {
    stroke-dasharray: 2000;
    stroke-dashoffset: 2000;
    animation: drawLine 2s ease-out forwards;
  }

  .chart-line-blue { animation-delay: 0.2s; }
  .chart-line-green { animation-delay: 0s; }
  .chart-line-orange { animation-delay: 0.4s; }

  .chart-area {
    opacity: 0;
    animation: fadeIn 1s ease-out forwards;
    animation-delay: 0.8s;
  }

  .chart-area-green { animation-delay: 0.6s; }
  .chart-area-blue { animation-delay: 0.8s; }

  @keyframes drawLine {
    to { stroke-dashoffset: 0; }
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  .hero-content {
    position: relative;
    z-index: 1;
    padding: 140px 48px 60px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  .hero-main {
    max-width: 600px;
  }

  .hero-badge {
    display: inline-block;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.05em;
    color: var(--text-tertiary);
    text-transform: uppercase;
    margin-bottom: 24px;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.05;
    letter-spacing: -0.035em;
    margin-bottom: 24px;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 40px;
    max-width: 480px;
  }

  .hero-actions {
    display: flex;
    gap: 16px;
  }

  .btn-download {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: var(--accent-green);
    padding: 16px 32px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 15px;
    transition: all 0.15s;
  }

  .btn-download:hover {
    background: var(--accent-green-light);
    transform: translateY(-1px);
  }

  .btn-text {
    color: white;
  }

  .btn-platform {
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
    padding-left: 12px;
    border-left: 1px solid rgba(255, 255, 255, 0.2);
  }

  .hero-stats {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 32px;
    background: rgba(22, 22, 26, 0.8);
    border: 1px solid var(--line);
    border-radius: 12px;
    backdrop-filter: blur(12px);
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .stat-label {
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--text-tertiary);
  }

  .stat-value {
    font-family: var(--font-mono);
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .stat-value.positive { color: var(--accent-green-light); }
  .stat-value.blue { color: var(--accent-blue); }
  .stat-value.orange { color: var(--accent-orange); }

  .hero-image {
    position: relative;
    z-index: 1;
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 48px 80px;
  }

  .hero-image img {
    border-radius: 12px;
    border: 1px solid var(--line);
    box-shadow:
      0 0 0 1px rgba(255, 255, 255, 0.05),
      0 50px 100px -20px rgba(0, 0, 0, 0.7);
  }

  @media (max-width: 900px) {
    .hero-content {
      flex-direction: column;
      padding: 120px 24px 40px;
      gap: 40px;
    }

    .hero-stats {
      flex-direction: row;
      width: 100%;
      justify-content: space-between;
    }

    .hero-image {
      padding: 0 24px 60px;
    }
  }

  @media (max-width: 640px) {
    .hero-stats {
      flex-direction: column;
    }

    .hero-title br {
      display: none;
    }

    .stat-value {
      font-size: 1.25rem;
    }
  }
</style>
